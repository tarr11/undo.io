<div class="mobile-header">
  <%=@header%>
</div>
<div class="left-nav-section">

  <%=render 'layouts/collapse_button', :site_section => 'site'%>
  <ul class="nav nav-list ">
   <li class="nav-header">Site</li>
    <li class="site-hide-small nav-collapse">
      <a href="/"><i class="icon-home"></i>Home</a>
    </li>
    <li class="site-hide-small nav-collapse">
     <a href="<%= url_for :controller => "task_folder", :action=>"folder_view", :path=>"/", :username=>@file_user.username %>">
   <i class="icon-inbox"></i>Your notes</a>
   </li>
    </ul>
</div>

<div class="left-nav-section">
  <%=render 'layouts/collapse_button', :site_section => 'recent'%>
<ul class="nav nav-list ">
  <li class="nav-header">Recent</li>
   <li class="recent-hide-small nav-collapse"><a href="/"><i class="icon-flag"></i>Some-file.txt</a> </li>
  <li class="recent-hide-small nav-collapse"><a href="/"><i class="icon-flag"></i>other-file.txt</a> </li>
</ul>
</div>

<% if @folders.length > 0 %>
<div class="left-nav-section">
  <a class="btn btn-navbar" data-toggle="collapse" data-target=".folder-hide-small">
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    </a>
<ul class="nav nav-list">
  <li class="nav-header">Folders</li>
      <% @folders.each do |folder|%>
         <li class="folder-hide-small nav-collapse"> <a href="<%= url_for :controller => "task_folder", :action=>"folder_view", :path=>folder.path, :username=>@file_user.username %>">
           <i class="icon-folder-open"></i><%=folder.shortName%>
         </a></li>
      <% end %>
</ul>
</div>
  <% end %>
<% if @files.length > 0 %>
<div class="left-nav-section">
    <a class="btn btn-navbar" data-toggle="collapse" data-target=".file-hide-small">
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    </a>

    <ul class="nav nav-list">
      <li class="nav-header">Files</li>
           <% @files.each do |file|%>
            <li class="file-hide-small nav-collapse">
            <a href="<%= url_for :controller => "task_folder", :action=>"folder_view", :path=>file.filename, :username=>@file_user.username %>">
                <i class="icon-file"></i><%=file.shortName%>
            </a>
            </li>
        <% end %>
      </ul>
 </div>
<% end %>

 <% if @people.length > 0 %>
    <div class="left-nav-section">
     <a class="btn btn-navbar" data-toggle="collapse" data-target=".p-hide-small">
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    </a>

     <ul class="nav nav-list">
      <li class="nav-header">People</li>
         <% @people.each do |person|%>
          <li class="p-hide-small nav-collapse">
            <a href="<%= url_for :controller => "task_folder", :action=>"folder_view", :path=>@path, :q=>person, :username=>@file_user.username %>">
             <i class="icon-user"> </i><%=person%>
           </a>

          </li>
      <% end %>
    </ul>
    </div>
 <% end %>
