<!DOCTYPE html>
<html>
<head>
  <title>Undo.io</title>

  <%= stylesheet_link_tag    "bootstrap2.min" %>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= yield :javascript_includes %>
  <%= csrf_meta_tags %>
  <%= render "home/ga"%>
</head>
<body>
    <style type="text/css">
      body {
        padding-top: 60px;
      }
    </style>

    <div class="topbar">
      <div class="fill">
        <div class="container">
          <a class="brand" href="/"><span class="undo-un">un</span><span class="undo-do">do</span><span class="undo-io">.io</span></a>
            <% if !user_signed_in? %>
              <ul class="nav secondary-nav">
              <li><%= link_to "Sign in", new_session_path(resource_name), :class => "pull-right" %></li>
              </ul>
            <% else %>
              <ul class="nav secondary-nav">
                   <li class="dropdown" data-dropdown="dropdown">
                     <a href="#" class="dropdown-toggle">Welcome <%=current_user.email%></a>
                     <ul class="dropdown-menu">
                       <li><%= link_to('Settings', :controller => 'user', :action=>"show") %></li>
                       <li><%= link_to('Services', :controller => "oauth_consumers") %></li>
                       <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
                     </ul>
                   </li>
                 </ul>

            <% end %>
        </div>
      </div>
    </div>

    <div class="container">
        <%= content_for?(:content) ? yield(:content) : yield %>
      <footer>
        <p>&copy; Undo.io 2012</p>
      </footer>
    </div> <!-- /container -->


</body>
</html>
