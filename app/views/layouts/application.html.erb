<!DOCTYPE html>
<html>
<head>
  <title>Undo.io</title>


  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= yield :javascript_includes %>
  <%= yield :stylesheet_includes %>
  <%= csrf_meta_tags %>
  <%= render "home/ga"%>
</head>
<body>
    <style type="text/css">
      body {
        padding-top: 60px;
      }
    </style>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand" href="/"><span class="undo-un">un</span><span class="undo-do">do</span><span class="undo-io">.io</span></a>
            <% if !user_signed_in? %>
              <ul class="nav pull-right">
              <li><%= link_to "Sign in", new_session_path(resource_name)%></li>
              </ul>
            <% else %>
              <ul class="nav pull-right">
                   <li class="dropdown">
                     <a href="#" data-toggle="dropdown" class="dropdown-toggle">Welcome <%=current_user.username%> <b class="caret"></b></a>
                     <ul class="dropdown-menu">
                       <li><%= link_to('Settings', :controller => 'user', :action=>"show") %></li>
                       <li><%= link_to('Services', :controller => "oauth_consumers") %></li>
                       <li class="divider"> </li>
                       <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
                     </ul>
                   </li>
                 </ul>

            <% end %>
        </div>
        </div>
    </div>

    <div class="container-fluid">
        <%= content_for?(:content) ? yield(:content) : yield %>
      <footer>
        <p>&copy; Undo.io 2012</p>
      </footer>
    </div> <!-- /container -->


</body>
</html>
