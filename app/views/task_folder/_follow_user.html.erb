<% if current_user.is_following?(@file.user)%>
  <div>You are following <%=@file.user.username%></div>
  <div>
    <a href="#" id="follow-user-button" class="btn">
      <i class="icon icon-user"></i> Unfollow</a>
  </a>
<%= form_tag url_for(:controller=>"task_folder", :action=>"update" ),:remote=>true, :method=>:put, :id=>"follow-user-form" do%>
  <%=hidden_field_tag 'updatemethod', 'unfollow'%>
<% end %>
</div> 
<% else %>
  <div>Follow <%=@file.user.username%> to keep track of their public notes.</div>
  <div>
    <a href="#" id="follow-user-button" class="btn">
      <i class="icon icon-user"></i> Follow</a>
  </a>
  </div>
<%= form_tag url_for(:controller=>"task_folder", :action=>"update" ),:remote=>true, :method=>:put, :id=>"follow-user-form" do%>
  <%=hidden_field_tag 'updatemethod', 'follow'%>
<% end %>

<% end %>
