<div id="<%=modal_id%>>" class="modal hide fade">
  <div class="modal-header">
    <a href="#" class="close">&times;</a>
    <h3>
      <%= yield(:header) %>
    </h3>
  </div>
  <div class="modal-body">
      <div class="clearfix">
        <%= yield(:body) %>
      </div>
  </div>
  <div class="modal-footer">
    <%= yield(:footer) %>
  </div>
</div>