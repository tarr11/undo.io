<% content_for :stylesheet_includes do %>
  <%= stylesheet_link_tag "task_folder"  %>
<% end %>
<% content_for :javascript_includes do %>
  <%= javascript_include_tag "dashboard" %>
<% end %>
<div class="container-fluid">
  <div class="row">
      <h1>Welcome <%=current_user.display_name%></h1>
  </div>
  <div class="row-fluid">
    <div class="span4">
      <h2>My Notes</h2>
      <%@changed_files_by_folder.each do |folder_item|%>
        <%= render 'task_folder/note_box_folder', :folder_item =>folder_item, :show_avatar=>false,:show_public_path=>false,:note_class=>"note-box-3x5-bootstrap" %>
      <% end %>
    </div>
    <div class="span4">
      <h2>Upcoming Events and Tasks</h2>
      <div class="dashboard-module">
        Reminders go here
      </div>
      <h2>Getting Started Guides</h2>
      <div class="dashboard-module">
      <h3>Create</h3>
      <ul>
        <li><%= link_to "Create a note", url_for(:controller => "task_folder", :action=>"new_file", :path=>(@folder_path ||= '/'), :username=>current_user.username) ,:method=>"post"%></li>
        <li>Make Todo Lists </li>
        <li>Use dates and events</li>
        <li>Make a slideshow</li>
        <li>Organize your notes in folders</li>
        <li>Sync to Dropbox</li>
      </ul>

      <h3>Share</h3>
      <ul>
        <li><%= link_to "Explore public notes", "/public"%></li>
        <li>Compare notes</li>
        <li>Copy someone else's note into your own folder</li>
        <li>Share notes with others</li>
        <li>Publish your own notes to everyone</li>
      </ul>
    </div>
  </div>
  <div class="span4">
    <h2>Public Notes</h2>
  </div>
  </div>
</div>
