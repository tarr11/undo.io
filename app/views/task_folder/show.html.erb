<div class="box-bar">
<% 0.upto(@rows) do |row| %>
   <% 0.upto(@cols) do |col|%>
          <% if @matrix[[col,row]].nil?%>
             <div class="box empty">
             <!-- <%=col%>:<%=row%> = empty-->
            </div>
          <% else %>
             <div class="box">
               <div class="box-header">
                    <div class="filename">
                      <% if @matrix[[col,row]][:item].class.to_s == "TodoFile" %>
                          <%= link_to @matrix[[col,row]][:item].name, @matrix[[col,row]][:item]%></div>
                       <% else %>
                      <%= link_to @matrix[[col,row]][:item].name, :controller=> "task_folder", :action=>"show",  :path => @matrix[[col,row]][:item].name%></div>
                          <div class="file-summary">

                            <%@matrix[[col,row]][:changes].each do |item|%>
                                <div><%=item[:file].name%></div>
                            <% end%>
                          </div>
                      <% end %>
                    </div>
                  <div class="file-changes">Recent Notes</div>
                 <div class="task">
                 <% if @matrix[[col,row]][:changes].length > 0%>
                    <%@matrix[[col,row]][:changes].each do |change|%>
                       <%=change[:diff].to_s(:html).html_safe%>
                    <% end %>
                  <% end %>
                 </div>

            </div>
          <% end %>

    <%end%>
    <div class="clear"></div>
<%end%>
</div>
